# ===========================================
# MOVIEHUB ENVIRONMENT VARIABLES
# ===========================================
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Fill in all values marked with ⚠️
# 3. Never commit .env to git
# 4. PORTS MEAN YOUR MACHINE PORTS, not INTERNAL DOCKER PORTS
# ===========================================

# ===========================================
# GENERAL CONFIGURATION
# ===========================================
NODE_ENV=development

# ===========================================
# CLERK AUTHENTICATION
# ⚠️ GET THESE FROM: https://dashboard.clerk.com/
# ===========================================
# Backend Secret Key (for api-gateway and user-service)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Frontend Publishable Key (for web frontend)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# ===========================================
# USER SERVICE DATABASE
# ===========================================
USER_DB_USER=postgres
USER_DB_PASSWORD=postgres_user_password_here  # ⚠️ Change this to a strong password
USER_DB_NAME=movie_hub_user
#####USER_DB_PORT=5432 # DONT CHANGE THIS
USER_DB_EXTERNAL_PORT=6000 # EXTERNAL PORT

# ===========================================
# USER SERVICE CONFIGURATION
# ===========================================
USER_SERVICE_HOST=user-service           # Internal Docker hostname
USER_SERVICE_PORT=3001                   # Internal container port
USER_SERVICE_EXTERNAL_PORT=3011          # External host port (localhost:3011)

# ===========================================
# MOVIE SERVICE DATABASE
# ===========================================
MOVIE_DB_USER=postgres
MOVIE_DB_PASSWORD=postgres_movie_password_here  # ⚠️ Change this to a strong password
MOVIE_DB_NAME=movie_hub_movie
#####MOVIE_DB_PORT=5432###### # DONT CHANGE THIS
MOVIE_DB_EXTERNAL_PORT=6001 # EXTERNAL PORT CHANGE THIS
# ===========================================
# MOVIE SERVICE CONFIGURATION
# ===========================================
MOVIE_SERVICE_HOST=movie-service         # Internal Docker hostname
MOVIE_SERVICE_PORT=3002                  # Internal container port
MOVIE_SERVICE_EXTERNAL_PORT=3012         # External host port (localhost:3002)

# ===========================================
# API GATEWAY CONFIGURATION
# ===========================================
API_GATEWAY_PORT=3000                    # Internal container port
API_GATEWAY_EXTERNAL_PORT=3010           # External host port (localhost:3010)

# ===========================================
# WEB FRONTEND CONFIGURATION
# ===========================================
WEB_PORT=4200                            # Internal container port
WEB_EXTERNAL_PORT=4200                   # External host port (localhost:4200)

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ===========================================
# NOTES FOR DEVELOPERS
# ===========================================
# - Each microservice has its own PostgreSQL database
# - Database passwords should be different for each service
# - In production, use strong passwords and secure secret management
# - The docker-compose network handles service discovery automatically
# - Service names in docker-compose are used as hostnames (e.g., user-service, movie-service)
